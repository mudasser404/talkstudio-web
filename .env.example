# STUDIO Talk Studio Platform - Environment Variables
# Copy this file to .env and update with your values

# ======================
# Django Configuration
# ======================
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=*,localhost,127.0.0.1

# ======================
# Database Configuration
# ======================
# SQLite (Default for development)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (Recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/studio_db

# ======================
# Redis & Celery
# ======================
REDIS_URL=redis://127.0.0.1:6379/0
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# ======================
# Email Configuration (for allauth)
# ======================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@studio.com

# ======================
# Payment Gateways
# ======================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# JazzCash (Pakistani Payment Gateway)
JAZZCASH_MERCHANT_ID=your-merchant-id
JAZZCASH_PASSWORD=your-password
JAZZCASH_INTEGRITY_SALT=your-integrity-salt

# Easypaisa (Pakistani Payment Gateway)
EASYPAISA_STORE_ID=your-store-id
EASYPAISA_PASSWORD=your-password

# ======================
# Storage Configuration
# ======================
# Local Storage (Default)
USE_S3=False

# AWS S3 (Optional)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ======================
# Social Authentication
# ======================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ======================
# CUDA & GPU Configuration
# ======================
CUDA_VISIBLE_DEVICES=0
TORCH_HOME=/workspace/models/.cache/torch
HF_HOME=/workspace/models/.cache/huggingface

# ======================
# Application Settings
# ======================
# Credits System
DEFAULT_FREE_CREDITS=1000
CREDITS_PER_CHARACTER=1

# Talk Studio
MAX_AUDIO_DURATION=30
MAX_TEXT_LENGTH=50000

# ======================
# Security
# ======================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# Production settings (uncomment for production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000

# ======================
# Logging
# ======================
LOG_LEVEL=INFO
LOG_FILE=/workspace/logs/django.log

# ======================
# TensorBoard
# ======================
TENSORBOARD_LOG_DIR=/workspace/logs/tensorboard

# ======================
# Jupyter Configuration
# ======================
JUPYTER_ENABLE=True
JUPYTER_PORT=8888
JUPYTER_TOKEN=your-jupyter-token-here
